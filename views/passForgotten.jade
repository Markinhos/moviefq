extends layout

block content
    h1 = title
    .row
        .col-md-12
            if(flash)
                .alert.alert-success
                    p Email sent!
            form.well.span6(role="form", action="/pass-forgotten", method="POST")
                div.form-group
                    label(for="emailAddress") Email address
                    input#userEmail.form-control(type="email", name="email", placeholder="Enter email")
                .row
                    .col-md-12
                        button.btn.btn-default.pull-left(type="submit") Submit